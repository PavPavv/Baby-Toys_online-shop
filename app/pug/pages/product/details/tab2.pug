mixin productTableRow(label,value)
	tr.product-table__row
		td.product-table__cell=label
		td.product-table__cell=value

.content-block
	h2.title-section Характеристики
	.product-table__wrapper
		span.product-table__title Основное
		table.product-table
			tbody
				+productTableRow('Производитель','Puky')
				+productTableRow('Максимальный выдерживаемый вес, кг','20 кг')
				+productTableRow('Вес, кг', '2,65')
				+productTableRow('Страна', 'Германия')
				+productTableRow('Место сборки', 'Германия')
				+productTableRow('Гарантия', '2 года')
				+productTableRow('Габариты (Д х Ш х В), см ', '58х28х24')
		span.product-table__title Технические данные
		table.product-table
			tbody
				+productTableRow('Материал рамы','сталь')
				+productTableRow('Материал колес','EVA (вспененный полиэтилен)')
				+productTableRow('Регулировка сиденья по высоте', 'нет')
				+productTableRow('Регулировка руля по высоте', 'есть')